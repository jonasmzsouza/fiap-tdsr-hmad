<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/tvAoCentro"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Ao centro" />

    <TextView
        android:id="@+id/tvAcima"
        android:layout_above="@id/tvAoCentro"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acima" />

    <TextView
        android:id="@+id/tvAbaixo"
        android:layout_below="@id/tvAoCentro"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abaixo"/>

    <TextView
        android:layout_above="@id/tvAoCentro"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/tvAcima"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:text="A esquerda" />

    <TextView
        android:layout_below="@id/tvAoCentro"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/tvAbaixo"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"
        android:text="A direita"/>

</RelativeLayout>